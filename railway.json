{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKER",
    "context": "./",
    "dockerfile": "Dockerfile"
  },
  "deploy": {
    "startCommand": "docker run -p $RAILWAY_CONTAINER_PORT:8000 caiogtoledo/radar-inovacao",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}